<% content_for(:title, "users index") %>

<div class="goals">
  <div class="goals-header">
    <div class="goals-item-content">
      name
    </div>
  </div>
  <% @users.each do |user| %>
    <div class="goals-item">
      <div class="goals-item-content">
        <%= link_to user.name, user %>
      </div>
    </div>
  <% end %>
</div>

<div class="new-link">
  <button class="new-link-button" type="button">
    <%= link_to("new", new_user_path) %>
  </button>
</div>
<div class="goals-link">
  <button class="new-link-button" type="button">
    <%= link_to("goals", goals_path) %>
  </button>
</div>
