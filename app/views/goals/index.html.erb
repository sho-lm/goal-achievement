<% content_for(:title, "goals index") %>

<h1>Goals</h1>

<div class="goals">
  <div class="goals-header">
    <div class="goals-item-content">
      content
    </div>
    <div class="goals-item-limit">
      limit
    </div>
    <div class="goals-item-progress">
      progress
    </div>
  </div>
  <% @goals.each do |goal| %>
    <div class="goals-item">
      <div class="goals-item-content">
        <%= link_to goal.content, goal %>
      </div>
      <div class="goals-item-limit">
        <%= goal.limit %>
      </div>
      <div class="goals-item-progress">
        <%= goal.progress %>
      </div>
    </div>
  <% end %>
</div>

<div class="new-link">
  <button class="new-link-button" type="button">
    <%= link_to("new", new_goal_path) %>
  </button>
</div>
<div class="users-link">
  <button class="users-link-button" type="button">
    <%= link_to("users", users_path) %>
  </button>
</div>