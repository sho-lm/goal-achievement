<% content_for(:title, "goals show") %>

<div class="goals">
  <div class="goals-header">
    <div class="goals-item-content">
      content
    </div>
    <div class="goals-item-limit">
      limit
    </div>
    <div class="goals-item-progress">
      progress
    </div>
  </div>
  <div class="goals-item">
    <div class="goals-item-content">
      <%= @goal.content %>
    </div>
    <div class="goals-item-limit">
      <%= @goal.limit %>
    </div>
    <div class="goals-item-progress">
      <%= @goal.progress %>
    </div>
  </div>
</div>
<%= link_to("戻る", user_goals_path(@user)) %>
<%= link_to("編集", edit_user_goal_path(@user, @goal)) %>
<%= link_to("削除", user_goal_path(@user, @goal), method: "delete",
                          data: { confirm: "本当にいいですか？" }) %>